{% extends 'MainBundle::header.html.twig' %}
{% block title %}Countries | Info {% endblock %}

{% block body %}
     <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">           
        <div class="row">
            <ol class="breadcrumb">
                <li><a href="{{path('main_homepage')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li class="active">Countries</li>
                <li class="active">Info</li>
            </ol>
        </div><!--/.row-->
        
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Country Info</h1>
            </div>
        </div><!--/.row-->

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Info about the country.</div>
                    <div class="panel-body">
                        <div class="col-md-6">

    <table data-toggle="table">
        <tbody>
            <tr>
                <th>Country ID</th>
                <td>{{ tblCountry.idCountry }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tblCountry.name }}</td>
            </tr>
            <tr>
                <th>Created By</th>
                <td>{% if tblCountry.createdBy %}{{ tblCountry.createdBy}}{% endif %}</td>
            </tr>
            <tr>
                <th>Date Created</th>
                <td>{% if tblCountry.createdDt %}{{ tblCountry.createdDt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modified By</th>
                <td>{% if tblCountry.modifiedBy %}{{ tblCountry.modifiedBy }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date Modified</th>
                <td>{% if tblCountry.modifiedDt %}{{ tblCountry.modifiedDt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ tblCountry.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('countries_admin_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('countries_admin_edit', { 'id': tblCountry.idCountry }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
