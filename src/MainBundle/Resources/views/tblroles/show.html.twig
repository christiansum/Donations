{% extends 'base.html.twig' %}

{% block body %}
    <h1>TblRoles</h1>

    <table>
        <tbody>
            <tr>
                <th>Idrole</th>
                <td>{{ tblRole.idRole }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ tblRole.type }}</td>
            </tr>
            <tr>
                <th>Createddt</th>
                <td>{% if tblRole.createdDt %}{{ tblRole.createdDt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifieddt</th>
                <td>{% if tblRole.modifiedDt %}{{ tblRole.modifiedDt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ tblRole.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('roles_admin_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('roles_admin_edit', { 'id': tblRole.idRole }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
